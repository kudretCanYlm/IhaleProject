@model IhaleProject.Application.Contracts.Birim.CreateBirimDto
@{
    Layout = null;
}
<form method="post" asp-action="Create" asp-controller="Birim">
    <div id="createModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Birim Ekleme</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="BirimAdi"></label>
                        <input type="text" asp-for="BirimAdi" class="form-control" />
                        <span asp-validation-for="BirimAdi"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>